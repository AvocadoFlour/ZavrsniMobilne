<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/received_chat_message_view"
        android:layout_width="wrap_content"
        android:maxWidth="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/received_chat_buble_edit_text"
        android:padding="16dp"
        android:text="This is a received message. This should wrap  around its content and thus display the entire message string"
        app:layout_constraintBottom_toBottomOf="@+id/received_chat_message_user_photo"
        app:layout_constraintStart_toEndOf="@+id/received_chat_message_user_photo"
        app:layout_constraintTop_toTopOf="@+id/received_chat_message_user_photo"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginLeft="8dp"
        app:layout_goneMarginStart="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/received_chat_message_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>