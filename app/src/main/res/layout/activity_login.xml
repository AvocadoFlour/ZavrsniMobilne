<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:orientation="vertical">

    <include
        android:id="@+id/login_activity_username_layout"
        layout="@layout/custom_edit_text_field"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/login_activity_password_layout"
        layout="@layout/custom_edit_text_field"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/login_activity_username_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_activity_username_layout"
        app:layout_constraintTop_toTopOf="@+id/login_activity_username_layout" />

    <Button
        android:id="@+id/login_login_button"
        android:background="@drawable/rounded_login_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Login"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/login_activity_password_layout"
        app:layout_constraintStart_toStartOf="@+id/login_activity_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_password_layout" />

    <TextView
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/login_register_redirect_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Registration"
        app:layout_constraintEnd_toEndOf="@+id/login_login_button"
        app:layout_constraintStart_toStartOf="@+id/login_login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_login_button" />
</androidx.constraintlayout.widget.ConstraintLayout>